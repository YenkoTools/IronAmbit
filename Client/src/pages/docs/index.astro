---
// biome-ignore lint/correctness/noUnusedImports: Layout used in template below
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Documentation" description="Documentation for Iron Ambit">
  <div class="max-w-4xl">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Documentation</h1>

    <div class="grid gap-6">
      <a
        href="/docs/getting-started"
        class="block p-6 bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow"
      >
        <h2 class="text-2xl font-semibold text-blue-600 mb-2">Getting Started</h2>
        <p class="text-gray-600">Learn how to set up and run the Iron Ambit project locally.</p>
      </a>

      <div class="p-6 bg-gray-50 border border-gray-200 rounded-lg">
        <h2 class="text-2xl font-semibold text-gray-800 mb-2">More docs coming soon...</h2>
        <p class="text-gray-600">We're working on adding more documentation pages.</p>
      </div>
    </div>
  </div>
</Layout>
