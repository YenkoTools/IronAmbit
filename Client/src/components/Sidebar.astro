---
// Sidebar component
interface Props {
  navLinks?: Array<{ href: string; label: string }>;
}

const {
  navLinks = [
    { href: '/', label: 'Home' },
    { href: '/about', label: 'About' },
    { href: '/docs', label: 'Documentation' },
    { href: '/blog', label: 'Blog' },
  ],
} = Astro.props;
---

<aside class="w-64 bg-gray-100 border-r border-gray-300 h-full overflow-y-auto">
  <nav class="p-4">
    <ul class="space-y-2">
      {navLinks.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="block px-4 py-2 text-gray-700 hover:bg-blue-100 hover:text-blue-800 rounded-lg transition-colors"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>
